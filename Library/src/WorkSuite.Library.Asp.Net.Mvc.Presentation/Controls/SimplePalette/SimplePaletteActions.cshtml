@* Generator : MvcHelper GeneratePrettyNames : true *@
@using Controls.Primitives
@using Server.SimplePalettes


@helper For( IEnumerable<SimplePaletteAction> actions ) {
    
    @* Display the menu if there are actions *@
    if (@actions != null && @actions.Any())
    {
    <menu class="menu">
        @foreach (var action in @actions) {
            @Action(action)
        }
    </menu> 
    }
       
}


@helper Action(SimplePaletteAction action)
{
    <a data-context="@action.component_context" data-action="@action.name" class="action @action.name @action.classes.AsHtmlClassString()" href="@action.url">@action.title</a>
}
