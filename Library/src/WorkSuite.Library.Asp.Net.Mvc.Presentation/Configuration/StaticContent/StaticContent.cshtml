@using WorkSuite.Library.Asp.Net.Mvc.Presentation.Configuration.StaticContent

@functions {

    /// <summary>
    /// Returns the host url of the static content web site.
    /// </summary>
    /// <remarks>
    /// The StaticContent website is the site that provides all the framework javascript and the different clients css
    /// which is generated from sass.
    /// </remarks>
    public static string host ( ) {
        return StaticContentExtensions.host_url;
    }

    /// <summary>
    /// Returns url path prefixed with the the host url of the static content web site.
    /// </summary>
    public static string get_url_for ( string url_path ) {

        return StaticContentExtensions.host_url + url_path;

    }
}